<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.mschneider.pdischeduler.web.project.ProjectDisplay"
        datasource="projectDs"
        focusComponent="fieldGroup"
        messagesPack="com.mschneider.pdischeduler.web.project">
    <dsContext>
        <datasource id="projectDs"
                    class="com.mschneider.pdischeduler.entity.Project"
                    view="project-view"/>
    </dsContext>
    <dialogMode forceDialog="true"
                height="AUTO"
                width="600"/>
    <layout expand="buttonBox"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="projectDs"
                    editable="false"
                    width="100%">
            <column width="100%">
                <field editable="false"
                       property="name"/>
                <field editable="false"
                       property="description"
                       rows="5"/>
                <field editable="false"
                       property="groupAccess"/>
                <field caption="msg://pdiSubDir"
                       editable="false"
                       property="pdiSubDir"/>
                <field caption="msg://pdiParameter"
                       editable="false"
                       property="pdiParameter"/>
                <field editable="false"
                       property="timezone"/>
                <field editable="false"
                       property="mailReceiverInfo"/>
                <field editable="false"
                       property="mailReceiverError"/>
                <field property="cleanupAfterDays"/>
                <field caption="msg://workerName"
                       editable="false"
                       property="worker"/>
                <field caption="msg://workerUrl"
                       editable="false"
                       property="worker.url"/>
                <field caption="msg://workerTimezone"
                       editable="false"
                       property="worker.timezone"/>
                <field caption="msg://workerType"
                       editable="false"
                       property="worker.workerType"/>
                <field caption="msg://workerPdiRootDir"
                       editable="false"
                       property="worker.pdiRootDir"/>
                <field caption="msg://workerDataRootDir"
                       editable="false"
                       property="worker.dataRootDir"/>
                <field property="dataSubDir"/>
            </column>
        </fieldGroup>
        <hbox id="buttonBox"
              spacing="true">
            <button id="closeBtn"
                    caption="msg://closeButtonCaption"
                    invoke="onCloseBtnClick"/>
        </hbox>
    </layout>
</window>
