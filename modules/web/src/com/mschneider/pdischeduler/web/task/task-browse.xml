<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.mschneider.pdischeduler.web.task.TaskBrowse"
        focusComponent="tasksTable"
        lookupComponent="tasksTable"
        messagesPack="com.mschneider.pdischeduler.web.task">
    <dsContext>
        <collectionDatasource id="currProjectTasksDs"
                              class="com.mschneider.pdischeduler.entity.Task"
                              view="task-view">
            <query>
                <![CDATA[select e from pdischeduler$Task e
where e.project.id = :param$currProject
order by e.sortKey, e.name]]>
            </query>
        </collectionDatasource>
        <datasource id="currProjectDs"
                    allowCommit="false"
                    class="com.mschneider.pdischeduler.entity.Project"
                    view="project-view"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="tasksTable"
            spacing="true">
        <label id="headline"
               stylename="bold"/>
        <table id="tasksTable"
               multiselect="true"
               width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
                <action id="refresh"/>
            </actions>
            <columns>
                <column id="sortKey"/>
                <column id="name"/>
                <column id="description"
                        maxTextLength="20"/>
                <column id="pdiFile"
                        caption="msg://pdiFile"/>
                <column id="pdiParameter"
                        caption="msg://pdiParameter"
                        maxTextLength="10"/>
                <column id="triggerType"/>
                <column id="cronSpec"/>
                <column id="cronExclDates"
                        maxTextLength="12"/>
                <column id="prevTask"/>
                <column id="active"/>
            </columns>
            <rows datasource="currProjectTasksDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="tasksTable.create"/>
                <button id="editBtn"
                        action="tasksTable.edit"/>
                <button id="copyBtn"
                        action="tasksTable.copy"
                        caption="msg://copyCaption"
                        icon="COPY"/>
                <button id="removeBtn"
                        action="tasksTable.remove"/>
                <button id="refreshBtn"
                        action="tasksTable.refresh"/>
                <button id="exportCsvBtn"
                        action="tasksTable.exportCsv"
                        caption="msg://exportCsvCaption"
                        icon="DOWNLOAD"/>
                <upload id="importCsvUpload"
                        uploadButtonCaption="msg://importCsvCaption"
                        uploadButtonIcon="UPLOAD"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
