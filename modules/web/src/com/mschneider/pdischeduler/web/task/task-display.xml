<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.mschneider.pdischeduler.web.task.TaskDisplay"
        datasource="taskDs"
        focusComponent="fieldGroup"
        messagesPack="com.mschneider.pdischeduler.web.task">
    <dsContext>
        <datasource id="taskDs"
                    class="com.mschneider.pdischeduler.entity.Task"
                    view="task-view"/>
    </dsContext>
    <dialogMode forceDialog="true"
                height="AUTO"
                width="600"/>
    <layout expand="buttonBox"
            spacing="true">
        <scrollBox id="scrollBox"
                   spacing="true">
            <label id="headline"/>
            <fieldGroup id="fieldGroup"
                        datasource="taskDs"
                        editable="false"
                        width="100%">
                <column width="100%">
                    <field editable="false"
                           property="name"/>
                    <field editable="false"
                           property="description"
                           rows="5"/>
                    <field caption="msg://pdiFile"
                           editable="false"
                           property="pdiFile"/>
                    <field caption="msg://pdiParameter"
                           editable="false"
                           property="pdiParameter"/>
                    <field editable="false"
                           property="logLevel"/>
                    <field editable="false"
                           property="sortKey"/>
                    <field editable="false"
                           property="triggerType"/>
                    <field editable="false"
                           property="cronSpec"/>
                    <field editable="false"
                           property="cronExclDates"/>
                    <field editable="false"
                           property="prevTask"/>
                    <field editable="false"
                           property="timeoutSec"/>
                </column>
            </fieldGroup>
        </scrollBox>
        <hbox id="buttonBox"
              spacing="true">
            <button id="closeBtn"
                    caption="msg://closeButtonCaption"
                    invoke="onCloseBtnClick"/>
        </hbox>
    </layout>
</window>
