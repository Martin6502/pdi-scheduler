<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.mschneider.pdischeduler.web.worker.WorkerEdit"
        datasource="workerDs"
        messagesPack="com.mschneider.pdischeduler.web.worker">
    <dsContext>
        <datasource id="workerDs"
                    class="com.mschneider.pdischeduler.entity.Worker"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <scrollBox height="100%">
            <vbox margin="true"
                  spacing="true">
                <textField id="name"
                           caption="Worker name"
                           datasource="workerDs"
                           datatype="string"
                           property="name"
                           required="true"
                           width="100%"/>
                <textArea id="description"
                          caption="Worker description"
                          datasource="workerDs"
                          property="description"
                          rows="3"
                          width="100%"/>
                <textField id="url"
                           caption="Worker URL"
                           datasource="workerDs"
                           datatype="string"
                           contextHelpText="msg://workerUrlDesc"
                           property="url"
                           required="true"
                           width="100%"/>
                <hbox id="credentialBox"
                      expand="button_pass1"
                      spacing="true"
                      width="520px">
                    <textField id="userid"
                               align="BOTTOM_LEFT"
                               caption="Worker Userid"
                               datasource="workerDs"
                               datatype="string"
                               property="userid"
                               required="true"
                               width="200px"/>
                    <passwordField id="password"
                                   align="BOTTOM_LEFT"
                                   caption="Password"
                                   datasource="workerDs"
                                   property="password"
                                   required="true"
                                   width="200px"/>
                    <button id="button_pass1"
                            align="BOTTOM_LEFT"
                            caption="Show value"
                            invoke="showPassword"/>
                </hbox>
                <lookupField id="timezoneLookup"
                             caption="Worker Timezone "
                             datasource="workerDs"
                             nullOptionVisible="false"
                             property="timezone"
                             required="true"
                             width="300px"/>
                <textField id="DataRootDir"
                           caption="Data Root Directory"
                           datasource="workerDs"
                           datatype="string"
                           property="dataRootDir"
                           required="true"
                           width="100%"/>
                <lookupField id="workerTypeLookup"
                             caption="Worker Type"
                             datasource="workerDs"
                             nullOptionVisible="false"
                             property="workerType"
                             required="true"
                             width="300px"/>
                <vbox id="worker_type_0">
                    <textField id="PdiRootDir"
                               caption="PDI Root Directory"
                               datasource="workerDs"
                               datatype="string"
                               property="pdiRootDir"
                               width="100%"/>
                </vbox>
                <vbox id="worker_type_1"
                      spacing="true">
                    <textField id="pdiReposId"
                               caption="PDI Repository Name"
                               datasource="workerDs"
                               datatype="string"
                               property="pdiReposId"
                               width="100%"/>
                    <hbox id="reposCredentialBox"
                          expand="button_pass2"
                          spacing="true"
                          width="520px">
                        <textField id="pdiReposUser"
                                   align="BOTTOM_LEFT"
                                   caption="PDI Repository  User"
                                   datasource="workerDs"
                                   datatype="string"
                                   property="pdiReposUser"
                                   width="200px"/>
                        <passwordField id="pdiReposPassword"
                                       align="BOTTOM_LEFT"
                                       caption="PDI Repository Password"
                                       datasource="workerDs"
                                       property="pdiReposPassword"
                                       width="200px"/>
                        <button id="button_pass2"
                                align="BOTTOM_LEFT"
                                caption="Show value"
                                invoke="showPasswordRepos"/>
                    </hbox>
                </vbox>
                <checkBox id="active"
                          caption="Active"
                          datasource="workerDs"
                          property="active"/>
                <frame id="windowActions"
                       screen="editWindowActions"/>
            </vbox>
        </scrollBox>
    </layout>
</window>
